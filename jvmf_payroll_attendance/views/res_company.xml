<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="adp_company_form" model="ir.ui.view">
    <field name="name">res.company.adp.form</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="arch" type="xml">
      <xpath expr="//notebook" position="inside">
        <page name="adp_settings" string="ADP settings" groups="hr.group_hr_manager">
          <group>
            <field name="adp_company_id"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
